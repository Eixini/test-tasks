@model Brand
@{
	ViewData["Title"] = "Изменение марки";
}

<form asp-action="Edit">
    <div class="container border p-3">
        <h1 class="text-primary">Изменение марки</h1>

        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger" />

            <div class="col-2">
                <label asp-for="Name" class="pt-2" style="font-size: 20px;">Название</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="col-2">
                <label asp-for="Name" class="pt-2" style="font-size: 20px;" />
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>

            <div class="col-2">
                <label asp-for="Active" class="pt-2" style="font-size: 20px;">Доступность</label>
            </div>
            <div class="col-10 pb-3">
                <input type="checkbox" asp-for="@Model.Active" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Вернуться к списку</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Обновить" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}