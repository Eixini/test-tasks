@model IEnumerable<Model>

@{
	ViewData["Title"] = "Модели";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Список моделей</h1>
        </div>

        <div class="col text-end pt-1">
            <a asp-action="Create" class="btn btn-outline-primary">
                <i class="fa-solid fa-plus"></i> Добавить модель
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Марка</th>
                <th>Модель</th>
                <th>Доступность</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                string Color = "";
                if (item.Active)
                {
                    Color = "white";
                }
                else
                {
                    Color = "#CDCDCD";
                }
                <tr bgcolor="@Color">

                    <td>
                        <a asp-action="Details" class="align-middle" asp-route-id="@item.ModelId">
                            @item?.Brand?.Name
                        </a>
                    </td>

                    <td>
                        <a asp-action="Details" class="align-middle" asp-route-id="@item.ModelId">
                            @item.Name
                        </a>
                    </td>

                    <td>
                        @item.Active
                    </td>

                    <td>
                        <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.ModelId">
                            <i class="fa-solid fa-edit"></i>
                        </a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ModelId">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}